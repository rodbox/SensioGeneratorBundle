    <div class="btn-group">
        <a href="{{ "{{ path('" ~ route_name_prefix ~ "_index') }}" }}" class="btn btn-default">{{"{{'action.back'|trans}}"}}</a>

        {%- if ('edit' in actions) and (not hide_edit) %}
            <a href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}" class="btn btn-default">{{"{{'action.edit'|trans}}"}}</a>
        {%- endif %}
    </div>
    {%- if ('delete' in actions) and (not hide_delete) %}
        {{ '{{ form_start(delete_form,{attr:{class:"btn-group"}}) }}' }}
            <button type="submit" value="Delete" class="btn btn-danger">{{"{{'action.remove'|trans}}"}}</button>
        {{ '{{ form_end(delete_form) }}' }}
    {%- endif %}
